<div class="admin-page-header">
  <h1 class="admin-page-title">Commande #<%= @commande.id %></h1>
  <div class="page-actions">
    <%= link_to edit_admin_commande_path(@commande), class: "admin-btn" do %>
      ‚úèÔ∏è Modifier
    <% end %>
    <%= link_to admin_commandes_path, class: "admin-btn" do %>
      ‚Üê Retour aux commandes
    <% end %>
  </div>
</div>

<div class="commande-detail-container">
  <!-- Statut et actions rapides -->
  <div class="status-section">
    <div class="current-status">
      <h3>Statut actuel</h3>
      <span class="status-badge status-<%= @commande.statut %>">
        <%= @commande.statut.humanize %>
      </span>
    </div>

    <div class="status-actions">
      <h3>Actions rapides</h3>
      <div class="action-buttons">
        <% if @commande.statut == 'en_attente' %>
          <%= link_to change_status_admin_commande_path(@commande, status: 'confirmee'), 
                     method: :patch, class: "admin-btn admin-btn-success", 
                     confirm: "Confirmer cette commande ?" do %>
            ‚úÖ Confirmer la commande
          <% end %>
        <% elsif @commande.statut == 'confirmee' %>
          <%= link_to change_status_admin_commande_path(@commande, status: 'prete'), 
                     method: :patch, class: "admin-btn admin-btn-success",
                     confirm: "Marquer cette commande comme pr√™te ?" do %>
            üçΩÔ∏è Marquer pr√™te
          <% end %>
        <% elsif @commande.statut == 'prete' %>
          <%= link_to change_status_admin_commande_path(@commande, status: 'recuperee'), 
                     method: :patch, class: "admin-btn admin-btn-success",
                     confirm: "Marquer cette commande comme r√©cup√©r√©e ?" do %>
            ‚ú® Marquer r√©cup√©r√©e
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Informations client -->
  <div class="client-section">
    <h3>Informations client</h3>
    <div class="client-details">
      <div class="client-field">
        <label>Nom complet</label>
        <span><%= @commande.client_nom %></span>
      </div>
      
      <div class="client-field">
        <label>T√©l√©phone</label>
        <span><%= @commande.client_telephone %></span>
      </div>
      
      <div class="client-field">
        <label>Email</label>
        <span><%= @commande.client_email %></span>
      </div>
    </div>
  </div>

  <!-- D√©tails de la commande -->
  <div class="order-section">
    <h3>D√©tails de la commande</h3>
    <div class="order-info">
      <div class="order-field">
        <label>Date de commande</label>
        <span><%= @commande.created_at.strftime('%d/%m/%Y √† %H:%M') %></span>
      </div>
      
      <div class="order-field">
        <label>Heure de retrait souhait√©e</label>
        <span><%= @commande.formatted_pickup_time %></span>
      </div>
      
      <% if @commande.notes.present? %>
        <div class="order-field full-width">
          <label>Notes particuli√®res</label>
          <span class="notes-content"><%= @commande.notes %></span>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Articles command√©s -->
  <div class="items-section">
    <h3>Articles command√©s</h3>
    <div class="items-table">
      <div class="table-header">
        <span>Plat</span>
        <span>Prix unitaire</span>
        <span>Quantit√©</span>
        <span>Sous-total</span>
      </div>
      
      <% @order_items.each do |item| %>
        <div class="table-row">
          <span class="item-name">
            <%= item.plat.nom %>
            <small class="item-category"><%= item.plat.category.name %></small>
          </span>
          <span class="item-unit-price"><%= item.prix_unitaire.to_f %>‚Ç¨</span>
          <span class="item-quantity"><%= item.quantite %></span>
          <span class="item-total"><%= item.total_price.to_f %>‚Ç¨</span>
        </div>
      <% end %>
      
      <div class="table-footer">
        <span class="total-label">Total de la commande</span>
        <span class="total-amount"><%= @commande.montant_total.to_f %>‚Ç¨</span>
      </div>
    </div>
  </div>

  <!-- Historique -->
  <div class="history-section">
    <h3>Informations suppl√©mentaires</h3>
    <div class="history-info">
      <div class="history-item">
        <label>Commande cr√©√©e</label>
        <span><%= @commande.created_at.strftime('%d/%m/%Y √† %H:%M:%S') %></span>
      </div>
      
      <div class="history-item">
        <label>Derni√®re modification</label>
        <span><%= @commande.updated_at.strftime('%d/%m/%Y √† %H:%M:%S') %></span>
      </div>
      
      <div class="history-item">
        <label>Nombre total d'articles</label>
        <span><%= @commande.total_items %></span>
      </div>
    </div>
  </div>
</div>

