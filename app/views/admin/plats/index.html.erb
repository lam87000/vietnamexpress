<div class="admin-page-header">
  <h1 class="admin-page-title">Gestion des Plats</h1>
  <div class="page-actions">
    <%= link_to new_admin_plat_path, class: "admin-btn admin-btn-success" do %>
      ‚ûï Nouveau plat
    <% end %>
  </div>
</div>

<!-- Filtres par cat√©gorie -->
<div class="category-filters">
  <h3>Filtrer par cat√©gorie</h3>
  <div class="filter-buttons">
    <%= link_to admin_plats_path, class: "filter-btn #{'active' unless params[:category_id].present?}" do %>
      Tous les plats (<%= Plat.count %>)
    <% end %>
    
    <% @categories.each do |category| %>
      <%= link_to admin_plats_path(category_id: category.id), 
                 class: "filter-btn #{'active' if params[:category_id] == category.id.to_s}" do %>
        <%= category.name %> (<%= category.plats.count %>)
      <% end %>
    <% end %>
  </div>
</div>

<!-- Alertes stock faible -->
<% if @low_stock_plats.any? %>
  <div class="stock-alert">
    <h3>‚ö†Ô∏è Stock faible</h3>
    <p><%= @low_stock_plats.count %> plat(s) ont un stock inf√©rieur ou √©gal √† 5 unit√©s</p>
    <div class="low-stock-items">
      <% @low_stock_plats.each do |plat| %>
        <span class="stock-item">
          <%= plat.nom %> (<%= plat.stock_quantity %> restant)
        </span>
      <% end %>
    </div>
  </div>
<% end %>

<!-- Liste des plats -->
<div class="plats-grid">
  <% @plats.each do |plat| %>
    <div class="plat-card">
      <% if plat.image_url.present? %>
        <div class="plat-image">
          <img src="<%= plat.image_url %>" alt="<%= plat.nom %>">
        </div>
      <% else %>
        <div class="plat-image placeholder">
          üçΩÔ∏è
        </div>
      <% end %>

      <div class="plat-content">
        <div class="plat-header">
          <h3><%= plat.nom %></h3>
          <span class="plat-category"><%= plat.category.name %></span>
        </div>

        <div class="plat-price">
          <%= plat.formatted_price %>
        </div>

        <div class="plat-description">
          <%= truncate(plat.description, length: 100) %>
        </div>

        <div class="plat-stock">
          <span class="stock-label">Stock:</span>
          <span class="stock-value <%= 'low-stock' if plat.stock_quantity <= 5 %>">
            <%= plat.stock_quantity %> unit√©s
          </span>
          <span class="availability-status <%= plat.available? ? 'available' : 'unavailable' %>">
            <%= plat.available? ? '‚úÖ Disponible' : '‚ùå Indisponible' %>
          </span>
        </div>

        <div class="plat-actions">
          <%= link_to admin_plat_path(plat), class: "admin-btn admin-btn-sm" do %>
            üëÅÔ∏è Voir
          <% end %>
          
          <%= link_to edit_admin_plat_path(plat), class: "admin-btn admin-btn-sm" do %>
            ‚úèÔ∏è Modifier
          <% end %>
          
          <%= link_to admin_plat_path(plat), method: :delete, 
                     class: "admin-btn admin-btn-danger admin-btn-sm",
                     confirm: "√ätes-vous s√ªr de vouloir supprimer ce plat ?" do %>
            üóëÔ∏è Supprimer
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @plats.empty? %>
  <div class="empty-state">
    <h3>Aucun plat enregistr√©</h3>
    <p>Commencez par ajouter des plats √† votre menu</p>
    <%= link_to "Cr√©er le premier plat", new_admin_plat_path, class: "admin-btn admin-btn-success" %>
  </div>
<% end %>

