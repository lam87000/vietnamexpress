<div class="commandes-list">
  <div class="page-header">
    <h1>Mes commandes</h1>
    <%= link_to "Nouvelle commande", new_commande_path, class: "btn btn-primary" %>
  </div>

  <% if @commandes.any? %>
    <div class="commandes-grid">
      <% @commandes.each do |commande| %>
        <div class="commande-card">
          <div class="card-header">
            <h3>Commande #<%= commande.id %></h3>
            <div class="status-badge status-<%= commande.statut %>">
              <%= commande.statut.humanize %>
            </div>
          </div>
          
          <div class="card-body">
            <div class="commande-info">
              <div class="info-row">
                <strong>Date:</strong>
                <%= commande.created_at.strftime('%d/%m/%Y Ã  %H:%M') %>
              </div>
              <div class="info-row">
                <strong>Retrait prÃ©vu:</strong>
                <%= commande.formatted_pickup_time %>
              </div>
              <div class="info-row">
                <strong>Articles:</strong>
                <%= commande.total_items %> plat<%= commande.total_items > 1 ? 's' : '' %>
              </div>
              <div class="info-row total">
                <strong>Total: <%= commande.montant_total.to_f %>â‚¬</strong>
              </div>
            </div>
            
            <div class="items-preview">
              <% commande.order_items.limit(3).each do |item| %>
                <div class="item-preview">
                  <%= item.plat.nom %> (x<%= item.quantite %>)
                </div>
              <% end %>
              <% if commande.order_items.count > 3 %>
                <div class="item-preview more">
                  ... et <%= commande.order_items.count - 3 %> autre<%= commande.order_items.count - 3 > 1 ? 's' : '' %>
                </div>
              <% end %>
            </div>
          </div>
          
          <div class="card-actions">
            <%= link_to "Voir dÃ©tails", commande, class: "btn btn-outline-primary" %>
            <% if commande.can_be_cancelled? %>
              <%= link_to "Annuler", commande, method: :delete, 
                          confirm: "ÃŠtes-vous sÃ»r de vouloir annuler cette commande ?", 
                          class: "btn btn-outline-danger btn-sm" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <div class="empty-icon">ðŸ“‹</div>
      <h3>Aucune commande</h3>
      <p>Vous n'avez pas encore passÃ© de commande.</p>
      <%= link_to "Passer ma premiÃ¨re commande", new_commande_path, class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>

<style>
